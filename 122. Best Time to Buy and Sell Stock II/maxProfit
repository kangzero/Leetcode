class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int profit = 0;
        int n = prices.size();
        int i = 0;
        
        for(i = 0; (i + 1) < n; i++){
            if(prices[i] < prices[i + 1]){
                profit = profit + (prices[i + 1] - prices[i]);
                //cout << "prices[i + 1] == " << prices[i + 1] << " (i + 1) == " << i+1 << endl;
            }  
        }
        return profit;
    }
};
